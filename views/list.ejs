<%- include('../layouts/header') %>

<div class="container">
    <div class="heading"> CRUD listing </div>
    <% if(success.length) {%>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
          <strong>Hey you </strong> <%= success %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% } %>

      <% if(error.length) {%>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <strong>Hey you </strong> <%= error %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% } %>
    <a href="/add" class="btn btn-info">Add</a>
    <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Contact</th>
            <th colspan="2">Action</th>
          </tr>
          <% all_data.map(data => { %>
            <tr>
              <td> <img src="/uploads/<%= data.image %>" width="80" height="80"> </td>
              <td><%=  data.name %> </td>
              <td><%=  data.email %> </td>
              <td><%=  data.contact %> </td>
              <td><a href="/edit/<%= data._id %>" class="btn btn-success">Edit</a></td>
              <td><a href="/delete/<%= data._id %>" class="btn btn-danger">Delete</a></td>
            </tr>
          <% }) %>
        </thead>
        </tbody>
      </table>
</div>



<%- include('../layouts/footer') %>